@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movie_ViewModel.ID" />
            <div class="form-group">
                <label asp-for="Movie_ViewModel.Title" class="control-label"></label>
                <input asp-for="Movie_ViewModel.Title" class="form-control" />
                <span asp-validation-for="Movie_ViewModel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie_ViewModel.ReleaseDate" class="control-label"></label>
                <input asp-for="Movie_ViewModel.ReleaseDate" class="form-control" />
                <span asp-validation-for="Movie_ViewModel.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie_ViewModel.Genre" class="control-label"></label>
                <input asp-for="Movie_ViewModel.Genre" class="form-control" />
                <span asp-validation-for="Movie_ViewModel.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie_ViewModel.Price" class="control-label"></label>
                <input asp-for="Movie_ViewModel.Price" class="form-control" />
                <span asp-validation-for="Movie_ViewModel.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie_ViewModel.Rating" class="control-label"></label>
                <input asp-for="Movie_ViewModel.Rating" class="form-control" />
                <span asp-validation-for="Movie_ViewModel.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
