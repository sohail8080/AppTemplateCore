@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete Role";
}

<h1>@ViewData["Title"]</h1>


<div>

    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.Name)
        </dd>

    </dl>

    <form method="post">
        <input type="hidden" asp-for="Input.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>


    @if (Model.Input.SelectedUserList.Count <= 0)
    {
        <hr />
        <p>No Users found in this Role.</p>
        <hr />
    }
    else
    {
        <table class="table table-bordered table-hover">

            <thead>
                <tr>
                    <th>Users in Role</th>
                </tr>
            </thead>

            @foreach (var item in Model.Input.SelectedUserList)
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                </tr>
            }
        </table>
    }



</div>
