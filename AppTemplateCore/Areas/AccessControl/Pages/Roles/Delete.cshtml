@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete Role";
}

<partial name="_StatusMessage" for="StatusMessage" />

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">

    <div class="col-md-12">

        <div class="col-md-5">
            <dl class="row">

                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Input.Name)
                </dt>

                <dd class="col-md-3">
                    @Html.DisplayFor(model => model.Input.Name)
                </dd>

            </dl>
        </div>


        <div class="col-md-5">
            <table class="table table-bordered table-hover">

                <thead>
                    <tr>
                        <th>Users in Role</th>
                    </tr>
                </thead>

                @if (Model.Input.SelectedUserList.Count <= 0)
                {
                    <tr>
                        <td>
                            No Users found in this Role.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.Input.SelectedUserList)
                    {
                        <tr>
                            <td>
                                @item.UserName
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>


        <div class="form-group col-md-5">
            <form method="post">
                <input type="hidden" asp-for="Input.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="./Index" class="btn btn-primary">Back to List</a>
            </form>
        </div>



        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <b>Users in Role</b>
                </div>
                <div class="card-body">
                    @if (Model.Input.SelectedUserList.Any())
                    {
                        foreach (var user in Model.Input.SelectedUserList)
                        {
                            <span class="card-title">  @user.UserName</span>
                        }
                    }
                    else
                    {
                        <span class="card-title">None at the moment</span>
                    }
                </div>
                <div class="card-footer">
                    <form method="post">
                        <input type="hidden" asp-for="Input.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-page="./Index" class="btn btn-primary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>





    </div>
</div>

