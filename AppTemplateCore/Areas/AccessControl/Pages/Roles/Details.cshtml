@page
@model DetailsModel

@{
    ViewData["Title"] = "Role Details";

}

<h1>@ViewData["Title"]</h1>

<div>

    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.Name)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.Name)
        </dd>

    </dl>
</div>


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Input.Id" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>


<hr />
<a asp-page="" class="btn btn-primary">Add Users</a>


@if (Model.Input.SelectedUserList.Count <= 0)
{
    <hr />
    <p>No Users found in this Role.</p>
    <hr />
}
else
{
    //ToDo:  List of Users with Add Remove in the row
    <table class="table table-bordered table-hover">

        <thead>
            <tr>
                <th>Users in Role</th>
            </tr>
        </thead>

        @foreach (var item in Model.Input.SelectedUserList)
        {
            <tr>
                <td>
                    @item.UserName
                </td>
            </tr>
        }
    </table>
}



