@page
@model DetailsModel

@{
    ViewData["Title"] = "Role Details";

}

<h1>@ViewData["Title"]</h1>

<div>

    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.Name)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.Name)
        </dd>

    </dl>
</div>

@if (Model.Input.UserList.Count <= 0)
{
    <hr />
    <p>No Users found in this Role.</p>
}
else
{
<table class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>Users in Role</th>
        </tr>
    </thead>

    @foreach (var item in Model.Input.UserList)
    {
        <tr>
            <td>
                @item.UserName
            </td>
        </tr>
    }
</table>
}


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Input.Id" class="btn btn-primary"  >Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
