@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete User";
}

<partial name="_StatusMessage" for="StatusMessage" />

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row col-md-12" style="color:red" >
    <h5>Are you sure you want to delete this user ?</h5>
</div>
<div style="height:5px"></div>

<div class="row">

    <div class="col-md-4">

        <dl class="row">

            <dt class="col-md-4">               
                @Html.DisplayNameFor(model => model.Input.UserName): &nbsp;
            </dt>

            <dd class="col-md-6">
                @Html.DisplayFor(model => model.Input.UserName)
            </dd>
        </dl>


        <dl class="row">

            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.Input.FirstName): &nbsp;
            </dt>

            <dd class="col-md-6">
                @Html.DisplayFor(model => model.Input.FirstName)
            </dd>
        </dl>


        <dl class="row">
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => model.Input.LastName): &nbsp;
            </dt>

            <dd class="col-md-6">
                @Html.DisplayFor(model => model.Input.LastName)
            </dd>
        </dl>


        <dl class="row">
            <dt class="col-md-4">               
                @Html.DisplayNameFor(model => model.Input.Email): &nbsp;
            </dt>

            <dd class="col-md-6">
                @Html.DisplayFor(model => model.Input.Email)
            </dd>
        </dl>


        <div class="form-group">
            <form method="post">
                <input type="hidden" asp-for="Input.UserName" />
                <input type="hidden" asp-for="Input.Email" />
                <input type="hidden" asp-for="Input.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="./Index" class="btn btn-primary">Back to List</a>
            </form>
        </div>

    </div>


    <div class="col-md-4">

        <table class="table table-bordered table-hover">

            <thead>
                <tr>
                    <th>Roles of User</th>
                </tr>
            </thead>
            @if (Model.Input.SelectedRolesList.Count() == 0)
            {
                <tr>
                    <td>
                        No roles found for this user.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var role in Model.Input.SelectedRolesList)
                {
                    <tr>
                        <td>
                            @role
                        </td>
                    </tr>
                }
            }
        </table>

    </div>


    <div class="col-md-4">

        <table class="table table-bordered table-hover">

            <thead>
                <tr>
                    <th>Claims of User</th>
                </tr>
            </thead>
            @if (Model.Input.SelectedClaimsList.Count() == 0)
            {
                <tr>
                    <td>
                        No claims found for this user.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var claim in Model.Input.SelectedClaimsList)
                {
                    <tr>
                        <td>
                            @claim
                        </td>
                    </tr>
                }
            }
        </table>


    </div>


</div>
