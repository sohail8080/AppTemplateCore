@page
@model DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<h1>@ViewData["Title"]</h1>

<div>

    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.UserName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.UserName)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.FirstName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.FirstName)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.LastName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.LastName)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.Email)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.Email)
        </dd>


    </dl>
</div>


@if (Model.Input.RolesList.Count() == 0)
{
    <hr />
    <p>No roles found for this user.</p>
}
else
{
    <table class="table table-bordered table-hover">

        <thead>
            <tr>
                <th>Roles of User</th>
            </tr>
        </thead>

        @foreach (var role in Model.Input.RolesList)
        {
            <tr>
                <td>
                    @role
                </td>
            </tr>
        }
    </table>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Input.Id" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
